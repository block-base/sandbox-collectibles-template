{
  "name": "react-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:react-app": "yarn workspace react-app dev",
    "format": "prettier . --ignore-path .gitignore --write",
    "fix": "run-p fix:*",
    "fix:react-app": "yarn workspace react-app lint --fix",
    "lint": "run-p lint:*",
    "lint:react-app": "yarn workspace react-app lint"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2"
  }
}
